.flash-message
  %p
    グループを作成しました

.side-bar
  .side-bar__header
    %h5
      うさぎ
    .side-bar__header__icon
      %a
        = link_to "#" do
          = fa_icon 'cog'
      %a
        = link_to "#" do
          = fa_icon 'edit'

  .side-bar__group-contents
    .side-bar__group-contents--list
      .side-bar__group-content--name
        %h5 
          うさぎとかめ
      .side-bar__group-content--message
        %p
          負けた。。。

.main-content
  .main-content__header
    .main-content__header--name
      %h2
        うさぎとかめ
      %p 
        Menber: うさぎ  かめ
    .main-content__header--edit-btn
      %a
        Edit

  .chat-contents
    .chat-contents__name
      %h6
        うさぎ
    .chat-contents__time
      %p 
        2019/10/22 00:00:00
    .chat-contents__message
      %p 
        負けた。。。

  .footer
    %input{type: "hidden"}
    .input-box
      %input#message_content.input-box__text{:name => "message[content]", :placeholder => "type a message", :type => "text"}/
      %label.input-box__image{:for => "message_image"}
        %i.fa.fa-image
        %input#message_image.input-box__image__file{:name => "message[image]", :type => "file"}/
    .footer__send-btn
      %p
        Send